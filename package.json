{
    "name": "wenfit-validator",
    "version": "1.0.1",
    "description": "ðŸš€ Universal, type-safe validation library for TypeScript/JavaScript. Define once, validate everywhere - React, Vue, Angular, Express, NestJS.",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        },
        "./adapters/react": {
            "types": "./dist/adapters/react.d.ts",
            "import": "./dist/adapters/react.js",
            "require": "./dist/adapters/react.cjs"
        },
        "./adapters/vue": {
            "types": "./dist/adapters/vue.d.ts",
            "import": "./dist/adapters/vue.js",
            "require": "./dist/adapters/vue.cjs"
        },
        "./adapters/angular": {
            "types": "./dist/adapters/angular.d.ts",
            "import": "./dist/adapters/angular.js",
            "require": "./dist/adapters/angular.cjs"
        },
        "./adapters/express": {
            "types": "./dist/adapters/express.d.ts",
            "import": "./dist/adapters/express.js",
            "require": "./dist/adapters/express.cjs"
        },
        "./adapters/nestjs": {
            "types": "./dist/adapters/nestjs.d.ts",
            "import": "./dist/adapters/nestjs.js",
            "require": "./dist/adapters/nestjs.cjs"
        }
    },
    "scripts": {
        "build": "tsup",
        "build:check": "npm run build && node scripts/bundle-size.js",
        "benchmark": "npm run build && node scripts/benchmark.mjs",
        "test": "vitest --run",
        "test:watch": "vitest",
        "test:coverage": "vitest --run --coverage",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "typecheck": "tsc --noEmit"
    },
    "keywords": [
        "validation",
        "validator",
        "schema",
        "typescript",
        "type-safe",
        "zod-alternative",
        "react",
        "vue",
        "angular",
        "express",
        "nestjs",
        "form-validation",
        "data-validation",
        "runtime-validation",
        "type-inference"
    ],
    "author": "Wenfit Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/wenfit-validator.git"
    },
    "bugs": {
        "url": "https://github.com/yourusername/wenfit-validator/issues"
    },
    "homepage": "https://github.com/yourusername/wenfit-validator#readme",
    "devDependencies": {
        "@angular/common": "^18.2.14",
        "@angular/core": "^18.2.14",
        "@angular/forms": "^18.2.14",
        "@testing-library/react": "^16.3.2",
        "@types/estree": "^1.0.8",
        "@types/express": "^5.0.6",
        "@types/node": "^20.10.0",
        "@types/react": "^19.2.11",
        "@types/react-dom": "^19.2.3",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "@vitest/coverage-v8": "^1.0.4",
        "@vue/test-utils": "^2.4.6",
        "eslint": "^8.54.0",
        "eslint-config-prettier": "^9.0.0",
        "express": "^5.2.1",
        "fast-check": "^3.15.0",
        "happy-dom": "^12.10.3",
        "jsdom": "^28.0.0",
        "prettier": "^3.1.0",
        "react": "^19.2.4",
        "react-dom": "^19.2.4",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2",
        "tsup": "^8.0.1",
        "typescript": "^5.3.2",
        "vitest": "^1.0.4",
        "vue": "^3.5.27",
        "zone.js": "^0.14.10"
    },
    "peerDependencies": {
        "@angular/core": ">=14.0.0",
        "express": ">=4.0.0",
        "react": ">=16.8.0",
        "vue": ">=3.0.0"
    },
    "peerDependenciesMeta": {
        "react": {
            "optional": true
        },
        "vue": {
            "optional": true
        },
        "@angular/core": {
            "optional": true
        },
        "express": {
            "optional": true
        }
    }
}